           text="Settings">
      <font>
         <Font size="25.0"/>
      </font>
   </Button>
   <Button alignment="CENTER" mnemonicParsing="false" onAction="#exit" prefHeight="40.0" prefWidth="130.0" text="Exit"
           textFill="#1d0707">
      <font>
         <Font size="25.0"/>
      </font>
   </Button>
</VBox>
