                       prefWidth="30.0" text="P" toggleGroup="$gameToggleButton" GridPane.rowIndex="1"/>
         <ToggleButton fx:id="d" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="D" toggleGroup="$gameToggleButton" GridPane.columnIndex="3"
                       GridPane.rowIndex="1"/>
         <ToggleButton fx:id="f" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="F" toggleGroup="$gameToggleButton" GridPane.columnIndex="4"
                       GridPane.rowIndex="1"/>
         <ToggleButton fx:id="g" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="G" toggleGroup="$gameToggleButton" GridPane.columnIndex="5"
                       GridPane.rowIndex="1"/>
         <ToggleButton fx:id="h" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="H" toggleGroup="$gameToggleButton" GridPane.columnIndex="6"
                       GridPane.rowIndex="1"/>
         <ToggleButton fx:id="j" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="J" toggleGroup="$gameToggleButton" GridPane.columnIndex="7"
                       GridPane.rowIndex="1"/>
         <ToggleButton fx:id="k" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="K" toggleGroup="$gameToggleButton" GridPane.columnIndex="8"
                       GridPane.rowIndex="1"/>
         <ToggleButton fx:id="l" minHeight="20.0" minWidth="30.0" mnemonicParsing="false" onAction="#clickGameKey"
                       text="L" toggleGroup="$gameToggleButton" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets left="20.0"/>
            </GridPane.margin>
         </ToggleButton>
         <ToggleButton fx:id="z" minHeight="20.0" minWidth="30.0" mnemonicParsing="false" onAction="#clickGameKey"
                       text="Z" toggleGroup="$gameToggleButton" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets left="20.0"/>
            </GridPane.margin>
         </ToggleButton>
         <ToggleButton minHeight="20.0" minWidth="30.0" mnemonicParsing="false" onAction="#clickGameKey" text="X"
                       toggleGroup="$gameToggleButton" GridPane.columnIndex="2" GridPane.rowIndex="2" fx:id="x">
            <GridPane.margin>
               <Insets left="20.0"/>
            </GridPane.margin>
         </ToggleButton>
         <ToggleButton fx:id="c" minHeight="20.0" minWidth="30.0" mnemonicParsing="false" onAction="#clickGameKey"
                       text="C" toggleGroup="$gameToggleButton" GridPane.columnIndex="3" GridPane.rowIndex="2">
