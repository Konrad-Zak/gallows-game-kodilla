            <GridPane.margin>
               <Insets left="20.0"/>
            </GridPane.margin>
         </ToggleButton>
         <ToggleButton fx:id="m" minHeight="20.0" minWidth="30.0" mnemonicParsing="false" onAction="#clickGameKey"
                       text="M" toggleGroup="$gameToggleButton" GridPane.columnIndex="7" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets left="20.0"/>
            </GridPane.margin>
         </ToggleButton>
      </GridPane>
   </HBox>
   <Button id="buttonEndGame" contentDisplay="CENTER" mnemonicParsing="false" onAction="#endGame" text="End Game"/>
</VBox>
