<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kodilla.game.controller.GameWindowController">
   <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
      <Label fx:id="labelCategory" text="Text">
         <font>
            <Font size="30.0"/>
         </font>
      </Label>
   </HBox>
   <HBox fx:id="mysteriousWord" alignment="CENTER" prefHeight="70.0" prefWidth="600.0" spacing="5.0"/>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0" spacing="20.0">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <ImageView fx:id="gamePicture" fitHeight="150.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@../img/s0.jpg"/>
      </ImageView>
      <GridPane alignment="CENTER" hgap="5.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         </rowConstraints>
         <ToggleButton fx:id="q" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="Q">
            <toggleGroup>
               <ToggleGroup fx:id="gameToggleButton"/>
            </toggleGroup>
         </ToggleButton>
         <ToggleButton fx:id="a" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="A" toggleGroup="$gameToggleButton" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
         <ToggleButton fx:id="s" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="S" toggleGroup="$gameToggleButton" GridPane.columnIndex="2"
                       GridPane.rowIndex="1"/>
         <ToggleButton fx:id="w" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="W" toggleGroup="$gameToggleButton" GridPane.columnIndex="1"/>
         <ToggleButton fx:id="e" mnemonicParsing="false" onAction="#clickGameKey" prefHeight="20.0"
                       prefWidth="30.0" text="E" toggleGroup="$gameToggleButton" GridPane.columnIndex="2"/>
